/* pages/detail/detail.wxss */
/* 视频详情样式 */
.mian{
  padding: 10rpx;
  color: #666;
}
.video_info{
  margin-top: 10rpx;
}
.video_info video{
  width: 100%;
  margin: 0 auto;
}
.video_title{
  position: relative;
  display: flex;
  justify-content: space-between;
  font-size: 35rpx;
}
.video_img{
  position: absolute;
  top: 40rpx;
  left: 280rpx;
}
.video_detail{
  margin-top: 5rpx;
  font-size: 24rpx;
}
.video_detail .auuthor{
  color: #000;
}
.video_detail text{
  margin-left:15rpx;
}

/* 推荐视频样式*/
.others_list{
  margin-top: 10rpx;
}
.others_item{
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.others_img_warp{
  width: 38%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 2rpx;
}
.others_img_warp image{
  width: 90%;
  border-radius: 15rpx; 
}
.others_info{
  width: 60%;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.others_title{
  color: darkturquoise;
  font-size: 28rpx;
}

/* 评论列表 */
.comment_warp{
  margin-top: 10rpx;
}
.comment_title{
  padding: 10rpx;
  font-size: 28rpx;
}

.comment_item{
  margin-bottom: 10rpx;
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #666;
}
.comment_user{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.comment_user image{
  width: 60%;
  border-bottom: 50%;
}
.comment_info{
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.comment_detail{
  display: flex;
  justify-content: space-between;
}
.comment_detail{
  font-size: 28rpx;
  color: #000;
}
.comment_detail .date{
  font-size: 24rpx;
  color: #000;
}
.comment_content{
  font-size: 28rpx;
  color: #000;
}
/* 底部样式 */
.detail_bottom{
  text-align: center;
  color: #666;
  font-size: 24rpx;
}